{
  "name": "xiaolu-ai",
  "version": "1.0.0",
  "description": "小鲁AI 智能助手桌面应用",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "postinstall": "node download-deps.js",
    "prepare": "node download-deps.js"
  },
  "keywords": [
    "electron",
    "chat",
    "xiaolu",
    "ai",
    "desktop"
  ],
  "author": "小鲁AI Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.lifetrace.floatchat",
    "productName": "小鲁AI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist",
      "!*.md",
      "!download-deps.js"
    ],
    "extraResources": [
      {
        "from": "lib",
        "to": "lib"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/luban.ico",
      "publisherName": "LifeTrace Team"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/luban.ico",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/luban.ico",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "小鲁AI"
    },
    "dmg": {
      "title": "小鲁AI",
      "backgroundColor": "#ffffff"
    }
  }
}
